{
  "name": "context-file-concat-ui",
  "version": "0.1.0",
  "description": "Frontend UI for Context File Concatenator - Built with Svelte 5 and Vite",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"cargo run --manifest-path=../../Cargo.toml\"",
    "dev:ui": "vite",
    "build": "vite build",
    "clean": "node -e \"const fs=require('fs');for (const p of ['dist','playwright-report','test-results','blob-report']){try{fs.rmSync(p,{recursive:true,force:true});}catch{}}\"",
    "build:clean": "npm run clean && vite build",
    "release:clean": "npm run clean && vite build && sh -c 'cd ../.. && cargo clean'",
    "release": "npm run release:clean && sh -c 'cd ../.. && cargo bundle --release'",
    "release:bin": "npm run release:clean && sh -c 'cd ../.. && cargo build --release'",
    "preview": "vite preview",
    "preview:e2e": "vite build && vite preview --port 4173",
    "lint": "eslint . --ext .ts,.svelte --max-warnings 0",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json --fail-on-warnings",
    "test": "vitest run --reporter=dot",
    "test:cov:core": "vitest run -c vitest.config.ts --coverage",
    "test:cov:full": "vitest run -c vitest.full.config.ts --coverage",
    "test:cov:full:verbose": "vitest run -c vitest.full.config.ts --coverage --reporter=verbose",
    "test:watch": "vitest",
    "test:e2e": "playwright test -c ./playwright.config.ts",
    "test:e2e:headed": "playwright test -c ./playwright.config.ts --headed",
    "test:contracts": "vitest run src/tests/contracts --reporter=dot",
    "check": "npm run lint && npm run typecheck && npm run test && npm run test:contracts && npm run test:cov:core && npm run test:e2e",
    "check:clean": "npm run clean && npm run build && npm run check",
    "budget:bundle": "node ./scripts/check-budgets.mjs",
    "test:e2e:budgets": "playwright test -c ./playwright.config.ts e2e/budgets.spec.ts"
  },
  "keywords": [
    "llm",
    "context",
    "files",
    "ui",
    "frontend",
    "webview",
    "svelte"
  ],
  "author": "src-dbgr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/src-dbgr/context-file-concat",
    "directory": "src/ui"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.5",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "8.2.2",
    "eslint": "^9.34.0",
    "eslint-plugin-svelte": "^3.11.0",
    "fast-check": "4.3.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "monaco-editor": "^0.52.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "5.38.3",
    "svelte-check": "3.8.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "monaco-editor": "^0.52.2",
    "zod": "^4.1.1"
  }
}
